@model UsuarioModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DoceGlamour</title>
    <link rel="stylesheet" href="~/Bootstrap 4/css/bootstrap.min.css" />
    <link href="~/fontawesome-free-5.12.1-web/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Cadastro.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/CadastrarUsuario.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>




</head>
<body>
   
    <form asp-controller="Usuario" asp-action="Cadastrar" method="post">
        <div class="container formCadastro">
            <div class="row align-items-center">
                <div class="col-md-12 align-self-center principal">

                    <div class="form-group ">
                        <input type="email" class="form-control" id="email" asp-for="emailUsuario"
                               aria-describedby="emailHelp" placeholder="Email" required>
                        <span asp-validation-for="emailUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <input type="password" class="form-control" id="senha" asp-for="senha" placeholder="Senha"
                               required>
                        <span asp-validation-for="senha" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <input type="password" class="form-control" id="senhaRepetida" placeholder="Repita a Senha"
                               required>
                    </div>
                    <div class="form-group ">
                        <input type="text" class="form-control" id="nomeUsuario" asp-for="nomeUsuario"
                               placeholder="Nome Completo" required>
                        <span asp-validation-for="nomeUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <input type="tel" class="form-control" id="telefoneUsuario" asp-for="telefoneUsuario"
                               placeholder="Telefone">

                    </div>
                    <button type="submit" class="btn btn-success">Cadastrar</button>
                    <a href="https://pt.vecteezy.com/vetor-gratis/doces" id="atribuicao">Doces Vetores por Vecteezy</a>

                </div>
            </div>

        </div>
    </form>
   





        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/Bootstrap 4/js/bootstrap.min.js"></script>
        <script src="~/js/CadastrarUsuario.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
        <script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>

   
</body>
</html>
