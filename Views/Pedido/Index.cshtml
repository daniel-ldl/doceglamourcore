@model X.PagedList.IPagedList<PedidoModel>
@{
    Layout = "_MenuLayout";
}


<!DOCTYPE html>
<html>
<head>
    <title>Pedidos</title>
    <link href="~/css/MenuCliente.css" rel="stylesheet" />

</head>
<body>

    <main class="col-md-10 ml-sm-auto col-lg-10 ml-auto px-4">
        <div class="d-flex justify-content-between align-items-center mt-4  pb-2 mb-3">
            <div>
                <a asp-action="AdicionarPedido" class="btn btn-primary btn-sm " id="novopedido">Novo Pedido</a>
            </div>
        </div>

        @if (Model.Count() > 0)
        {

            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Código </th>
                            <th>Cliente</th>
                            <th>Tema</th>
                            <th>Nome da Criança</th>
                            <th>Valor</th>
                            <th>Data de Entrega</th>
                            <th>Valor do Sinal</th>
                            <th>Data do Sinal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int contador = 1;
                        }
                        @foreach (PedidoModel pedido in Model)
                        {

                        <tr>

                            <td>@contador</td>
                            <td>@pedido.codigo_pedido </td>
                            <td>@pedido.cliente.nome</td>
                            <td>@pedido.tema</td>
                            <td>@pedido.nome_crianca</td>
                            <td>@pedido.valor_total</td>
                            <td>@pedido.data_entrega</td>
                            <td>@pedido.valor_sinal</td>
                            <td>@pedido.data_sinal</td> 
                      
                            <td>
                                <a asp-action="Alterar" asp-route-id="@pedido.codigo_pedido" class=" btn btn-primary btn-sm ">Atualizar</a>
                                <a asp-action="Excluir" asp-route-id="@pedido.codigo_pedido" class="btn btn-danger btn-sm excluirCliente">Excluir</a>
                            </td>
                            @{
                                contador++;
                            }
                        </tr>

                        }

                </table>
                @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina }))
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                Nenhum Pedido Cadastrado - Insira um Novo Pedido!!!
            </div>
        }

    </main>
</body>
</html>