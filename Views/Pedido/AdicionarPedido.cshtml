@model PedidoModel
@{
    Layout = "_MenuLayout";
    X.PagedList.IPagedList<ClienteModel> clientes = (X.PagedList.IPagedList<ClienteModel>)ViewBag.clientes;
    List<ProdutoModel> produtos = ViewBag.produtos;
}

<!DOCTYPE html>

<html>
<head>
    <title>Novo Pedido</title>
    <link href="~/css/Menu.css" rel="stylesheet" />
    <link href="~/css/AdicionarPedido.css" rel="stylesheet" />
    
</head>
<body>

    <main class="col-md-9 ml-sm-auto col-lg-10 ml-auto px-4">
        <div class="d-flex justify-content-between align-items-center mt-4  pb-2 mb-3">
            <div class="container">
                <form asp-controller="Pedido" asp-action="AdicionarPedido">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="cliete">Cliente</label>
                            <input type="text" class="form-control" id="cliente">
                        </div>
                        <div class="form-group col-md-1" s>
                            <a class="nav-link" data-toggle="modal" data-target="#modalExemplo" id="buscarCliente">
                                <i class="fas fa-search"></i>
                            </a>

                            <!-- Modal -->
                            <div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Adicionar Cliente</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-sm">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Nome </th>
                                                            <th>Telefone</th>
                                                            <th>CPF/CNPJ</th>
                                                            <th>Cidade</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            int contador = 1;
                                                        }
                                                        @foreach (ClienteModel cliente in clientes)
                                                        {

                                                            <tr>

                                                                <td>@contador</td>
                                                                <td>@cliente.nome</td>
                                                                <td>@cliente.telefone</td>
                                                                <td>@cliente.cnpj_cpf</td>
                                                                <td>@cliente.cidade</td>
                                                                <td style="display:none" id="@contador">@cliente.codigo_cliente</td>
                                                                <td>
                                                                    <button type="button" class="btn btn-primary btn-sm" onclick="AdicionarCliente(@contador)">Selecionar</button>

                                                                </td>
                                                                @{
                                                                    contador++;
                                                                }
                                                            </tr>

                                                        }
                                                    </tbody>

                                                </table>

                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="tema">Tema:</label>
                            <input type="text" class="form-control" id="tema">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="crianca">Nome da Criança:</label>
                            <input type="text" class="form-control" id="crianca">
                        </div>
                        <div class="form-group col-md-1">

                        </div>
                        <div class="form-group col-md-2">
                            <label for="idade">Idade da Criança:</label>
                            <input type="text" class="form-control" id="idade">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="dataentrega">Data de Entrega:</label>
                            <input type="date" class="form-control" id="dataentrega">
                        </div>
                        <div class="form-group col-md-1">

                        </div>
                        <div class="form-group col-md-2">
                            <label for="taxa">Taxa de Entrega:</label>
                            <input type="text" class="form-control" id="taxa">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="produtos">Produtos</label>
                            <select type="" class="form-control" id="produtos">
                                @{
                                    foreach (var produto in produtos)
                                    {
                                        <option>@produto.nome</option>
                                    }

                                }

                            </select>

                        </div>
                        <div class="form-group col-md-1">

                        </div>
                        <div class="form-group col-md-2">
                            <button class="btn btn-primary">Adicionar Produto</button>

                        </div>
                    </div>


                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Código </th>
                                    <th>Nome</th>
                                    <th>Valor</th>
                                    <th>Quantidade</th>

                                </tr>
                            </thead>
                            <tbody>
                            </tbody>



                        </table>
                    </div>

                </form>

            </div>
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/CadastrarPedido.js"></script>
</body>
</html>
