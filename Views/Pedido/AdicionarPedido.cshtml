@model PedidoModel
@{
    Layout = "_MenuLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Novo Pedido</title>
    <link href="~/css/Menu.css" rel="stylesheet" />
</head>
<body>

    <main class="col-md-9 ml-sm-auto col-lg-10 ml-auto px-4">
        <div class="d-flex justify-content-between align-items-center mt-4  pb-2 mb-3">
            <div class="container">
                <form asp-controller="Pedido" asp-action="AdicionarPedido">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="cliete">Cliente</label>
                            <input type="text" class="form-control" id="cliente">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="tema">Tema:</label>
                            <input type="text" class="form-control" id="tema">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="crianca">Nome da Criança:</label>
                            <input type="text" class="form-control" id="crianca">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="idade">Idade da Criança:</label>
                            <input type="text" class="form-control" id="idade">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="dataentrega">Data de Entrega:</label>
                            <input type="date" class="form-control" id="dataentrega">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="taxa">Taxa de Entrega:</label>
                            <input type="text" class="form-control" id="taxa">
                        </div>
                    </div>

                </form>
                <button type="submit" class="btn btn-primary">Adicionar Produto</button>
            </div>
        </div>
    </main>
</body>
</html>
