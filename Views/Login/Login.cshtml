@model UsuarioModel
@{
    Layout = "_LoginLayout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Primeira Página</title>
    <link rel="stylesheet" href="~/css/Login.css" />


</head>
<body class="container">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-sm-4 col-xl-4">

        </div>
        <div id="Divlogin" class="col-lg-4 col-md-4 col-sm-4 col-sm-4 col-xl-4">
            <label id="Labellogin">Login</label>
            @{
                try
                {
                    var errorMessage = TempData["ErrorLogin"].ToString();


                    if (errorMessage.Equals("Email ou Senha inválido!"))
                    {
                        <h5 class="text-danger">@errorMessage</h5>
                    }
                    else if (errorMessage.Equals("Efetue Login para Acessar."))
                    {
                        <h5 class="text-danger">@errorMessage</h5>
                    }



                }
                catch
                {

                }
                try
                {
                    var cadastroMessage = TempData["CadastroFeito"].ToString();
                    if (cadastroMessage.Equals("Usuário Cadastrado Efetue Login."))
                    {
                        <h5 class="text-success">@cadastroMessage</h5>
                    }
                    else if(cadastroMessage.Equals("Erro ao Cadastrar Tente Novamente."))
                    {
                        <h5 class="text-danger">@cadastroMessage</h5>
                    }

                }
                catch
                {


                }
            }
            <form asp-controller="Login" asp-action="Login" method="post">
                <div class="form-group">
                    <input type="email" class="form-control" id="exampleInputEmail1" asp-for="emailUsuario" aria-describedby="emailHelp" placeholder="Usuário">
                    <span asp-validation-for="emailUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="exampleInputPassword1" asp-for="senha" placeholder="Senha">
                    <span asp-validation-for="senha" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Lembrar meus dados?</label>
                </div>
                <button type="submit" class="btn btn-primary">Acessar</button>
                <br />
                <br />
                <br />
                <a class="btn btn-success" href="../Usuario/Index" role="button">Cadastre-Se</a>

            </form>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-sm-4 col-xl-4">

        </div>


    </div>
    <a href="https://br.freepik.com/fotos-vetores-gratis/fundo" id="atribuicao">Fundo foto criado por freepik - br.freepik.com</a>
</body>
</html>

