@model RelatorioModel
@{
    Layout = "_MenuLayout";   
}
<!DOCTYPE html>
<head>
    <title>Relatório por Período</title>
    
</head>
<body>
    <main class="col-md-10 ml-sm-auto col-lg-10 ml-auto">

        <div class="container">
            <form asp-controller="Relatorios" asp-action="RelatorioPeriodoCarregado" method="post">

                <div class="form-group">
                    <label for="dataInicial" class="col-sm-2 control-label">
                        Data Inicial:
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="datade" type="date" class="form-control" id="dataInicial" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataFinal" class="col-sm-2 control-label">
                        Data Final
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="dataate" type="date" class="form-control" id="dataFinal" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Gerar Relatório</button>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>

                        <th scope="col">Código</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Data Pedido</th>
                        <th scope="col">Data Entrega</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>
    </main>
    <script src="~/js/Relatorio.js"></script>
</body>